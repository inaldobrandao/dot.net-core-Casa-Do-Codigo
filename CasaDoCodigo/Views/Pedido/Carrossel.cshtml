@{ 
    ViewData["Title"] = "Carrossel";
}

<h3>Catálogo</h3>

<div id="my-carousel" class="carousel slide" data-ride="carousel">
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <div class="row">
                @for (int i = 0; i < 4; i++)
                {
                    <div class="col-md-3">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <img src="~/images/produtos/large_@(Model[i].Id).jpg" />
                            </div>
                            <div class="panel-footer">
                                <div>@(Model[i].Nome)</div>
                                <div>@(Model[i].Preco)</div>
                                <div class="text-center">
                                    <a asp-action="Carrinho">Adicionar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="item">
            <div class="panel panel-default">
                <div class="panel-body">
                    <img src="~/images/produtos/large_2.jpg" />
                </div>
                <div class="panel-footer">
                    <div>May the code be with you</div>
                    <div>R$ 59,90</div>
                </div>
            </div>
        </div>
        <div class="item">
            <div class="panel panel-default">
                <div class="panel-body">
                    <img src="~/images/produtos/large_3.jpg" />
                </div>
                <div class="panel-footer">
                    <div>Camiseta Como seria bom</div>
                    <div>R$ 59,90</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#my-carousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#my-carousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>